<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body text-center"
        style=" box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px,
        rgba(0, 0, 0, 0.12) 0px -12px 30px, 
        rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17)
         0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;;
             border-radius: 20px; 
             margin-top: 50px;">
            <h1 class="mb-3">
                <img src="https://cdn-icons-png.flaticon.com/128/1000/1000948.png" alt="icon" width="20%" />
            </h1>
            <h2 style="color: rgba(45,253,148,1)">
                Forgot Password
            </h2>
            <%- include ("./messages") %>
            <form action="/auth/forgot" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
                </div>
                <button type="submit" class="btn btn-primary btn-block"
                style="background-color: rgba(45,253,148,1);
                color:black;">Send me a password reset link</button>
            </form>
            <p class="mt-4">
                Remember your password? <a href="/auth/login">Login</a>
            </p>
        </div>
    </div>
</div>
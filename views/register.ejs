<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center"
    style=" box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px,
    rgba(0, 0, 0, 0.12) 0px -12px 30px, 
    rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17)
     0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;;
         border-radius: 20px; 
         margin-top: 0px;">
      <h1 class="mb-3">
        <img src="https://cdn-icons-png.flaticon.com/128/9244/9244391.png" alt="icon" width="20%" />
      </h1>
      <h2 style="color: rgba(45,253,148,1)" >
        Register New User
      </h2>
      <%- include ("./messages") %>
      <form action="/auth/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block"
        style="background-color: rgba(45,253,148,1) ; color: black;">
          Register
        </button>
      </form>
      <p class="mt-4">Already have an account? <a href="/auth/login">Login</a></p>
    </div>
  </div>
</div>